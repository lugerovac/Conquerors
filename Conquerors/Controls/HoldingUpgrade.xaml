<UserControl x:Class="Conquerors.HoldingUpgrade"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="50" Width="80">

    <Grid x:Name="ControlRoot" Background="#FFA86767">
        <Rectangle Width="80" Height="50" Stroke="Beige"/>
        <Image Source="Agents/SpriteSteward.png" Margin="0,0,54,23"/>
        <TextBlock Text="+" Foreground="White" FontSize="24" Margin="4,-3,59,23" />
        <TextBlock Foreground="#FFF18E49" Margin="26,0,-26,0" HorizontalAlignment="Left" Width="80" FontSize="11" FontFamily="Times New Roman">
        	<Run Text="Upgrade"/>
        	<LineBreak/>
        	<Run Text="Defenses"/>
        </TextBlock>
        <Image x:Name="imgGold" Source="Resources/Gold.png" Margin="0,21,53,0"/>
        <TextBlock x:Name="txtGoldCost" Text="10" Margin="5,32,27,0" Foreground="#FFF18E49"/>
        <Image x:Name="imgStone" Source="Resources/Stone.png" Margin="32,21,21,0"/>
        <TextBlock x:Name="txtStoneCost" Text="20" Margin="32,32,0,0" Foreground="#FFF18E49"/>
        <Image Source="Resources/Hourglass.png" Margin="53,21,0,0"/>
        <TextBlock x:Name="txtTime" Text="3" Margin="64,32,-32,0" Foreground="#FFF18E49" />
    </Grid>
</UserControl>
