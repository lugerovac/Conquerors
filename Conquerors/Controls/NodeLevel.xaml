<UserControl x:Class="Conquerors.NodeLevel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="30" Width="70">

    <Grid Background="DarkGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Lv. " Grid.ColumnSpan="2" Margin="0,5,0,-10" FontSize="16" FontFamily="Times New Roman" />
        <TextBox x:Name="txtNodeLevel" Margin="22,0,10,0" Grid.ColumnSpan="2" TextChanged="txtNodeLevel_TextChanged" />
    </Grid>
</UserControl>
