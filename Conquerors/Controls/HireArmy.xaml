<UserControl x:Class="Conquerors.HireArmy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50" d:DesignWidth="80">

    <Grid x:Name="ControlRoot" Background="#FFA86767">
        <Rectangle Width="80" Height="50" Stroke="Beige"/>
        <TextBlock Text="+" Margin="0,10,46,12" Foreground="#FFF18E49"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" FontWeight="Bold" />
        <TextBlock Margin="32,8,-5,10" Foreground="#FFF18E49" >
        	<Run Text=" "/>
        	<Run Text="Hire "/>
        	<LineBreak/>
        	<Run Text="Army"/>
        </TextBlock>
    </Grid>
</UserControl>
